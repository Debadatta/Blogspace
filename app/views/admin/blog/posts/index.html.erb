<%= render :partial => '/admin/blog/submenu' %>
<% flash.each do |key, value| %>
 <div id='flash' class="flash flash_<%= key %>">
   <%= value %>
 </div>
<% end %>
<div id='records'>
 
    <% if @blog_posts.any? %>
      <%= will_paginate @blog_posts %>

      <%= render :partial => "sortable_list" %>

      <%= will_paginate @blog_posts %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet', :create => t('admin.blog.submenu.posts.new')) %>
        </strong>
      </p>
    <% end %>
</div>
